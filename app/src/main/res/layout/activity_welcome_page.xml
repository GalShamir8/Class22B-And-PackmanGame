<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomePage_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/welcome_to_pac_man_game"
            android:textStyle="italic|bold"
            android:layout_margin="16dp"
            android:layout_weight="0.9"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_sensorsGame"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="@string/sensors_game"
            android:layout_gravity="center"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_controlsGame"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="@string/controls_game"
            android:layout_gravity="center"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_topTen"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:text="@string/top_10"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>